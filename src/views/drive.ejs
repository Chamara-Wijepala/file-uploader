<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
  <h1>Your Drive</h1>

  <form action="/drive" method="post" enctype="multipart/form-data">
    <input type="file" id="file" name="file" required>
    <button type="submit">Submit</button>
  </form>

  <h2>New folder</h2>
  <form action="/drive/folder" method="post">
    <label for="folder-name">Name:</label>
    <input type="text" name="folder-name" id="folder-name" required>

    <button type="submit">Add</button>
  </form>

  <div>
    <% for(let i = 0; i < folders.length; i++) { %>
    <%- include('./partials/folder.ejs', {i}) %>
    <% } %>

    <% for(let i = 0; i < files.length; i++) { %>
    <div>
      <a href="/drive/file/<%= files[i].id %>">
        <%= files[i].name %>
      </a>
      <p><%= files[i].createdAt %></p>
      <p><%= files[i].updatedAt %></p>
    </div>
    <% } %>
  </div>

</body>

</html>