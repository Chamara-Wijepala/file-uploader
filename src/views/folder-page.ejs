<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
  <h1><%= folder.name %></h1>

  <h2>New file</h2>
  <form action="/drive/<%= folder.id %>" method="post" enctype="multipart/form-data">
    <input type="file" id="file" name="file" required>
    <button type="submit">Submit</button>
  </form>

  <div>
    <% for(let i = 0; i < files.length; i++) { %>
    <div>
      <a href="/drive/file/<%= files[i].id %>">
        <%= files[i].name %>
      </a>
      <p><%= files[i].createdAt %></p>
      <p><%= files[i].updatedAt %></p>
    </div>
    <% } %>
  </div>
</body>

</html>